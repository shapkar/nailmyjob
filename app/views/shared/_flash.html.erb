<%# local_assigns: type, message %>
<%
  colors = {
    "notice" => "bg-emerald-50 text-emerald-800 border-emerald-200",
    "success" => "bg-emerald-50 text-emerald-800 border-emerald-200",
    "alert" => "bg-red-50 text-red-800 border-red-200",
    "error" => "bg-red-50 text-red-800 border-red-200",
    "warning" => "bg-amber-50 text-amber-800 border-amber-200"
  }
  color_class = colors[type.to_s] || colors["notice"]
  
  icons = {
    "notice" => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />',
    "success" => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />',
    "alert" => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
    "error" => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
    "warning" => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />'
  }
  icon_svg = icons[type.to_s] || icons["notice"]
%>

<div class="rounded-xl border p-4 shadow-lg <%= color_class %>"
     data-controller="flash">
  <div class="flex items-start gap-3">
    <svg class="w-5 h-5 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <%= icon_svg.html_safe %>
    </svg>
    <div class="flex-1">
      <p class="text-sm font-medium"><%= message %></p>
    </div>
    <button type="button" 
            class="inline-flex rounded-md p-1.5 hover:bg-black/5 transition-colors -mr-1 -mt-1"
            data-action="click->flash#dismiss">
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>

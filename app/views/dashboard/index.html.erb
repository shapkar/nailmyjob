<% content_for :title, "Home - NailMyJob" %>

<div class="max-w-3xl mx-auto">
  <%# Greeting - Big, warm, human %>
  <header class="mb-10 pt-4">
    <h1 class="text-4xl sm:text-5xl mb-3">
      Good <%= Time.current.hour < 12 ? "morning" : Time.current.hour < 17 ? "afternoon" : "evening" %>, <%= current_user.first_name || current_user.full_name.split.first %>.
    </h1>
    <p class="text-xl text-stone-500">
      <% if @stats[:pending_signatures] > 0 %>
        You have <strong class="text-stone-900"><%= @stats[:pending_signatures] %></strong> change <%= "order".pluralize(@stats[:pending_signatures]) %> waiting for signatures.
      <% elsif @stats[:active_jobs] > 0 %>
        You have <strong class="text-stone-900"><%= @stats[:active_jobs] %></strong> active <%= "job".pluralize(@stats[:active_jobs]) %>.
      <% else %>
        Everything's looking good today.
      <% end %>
    </p>
  </header>

  <%# Change Orders Captured - The Hero Metric %>
  <% if @change_orders_this_month > 0 %>
    <div class="card p-8 mb-10 border-l-4 border-emerald-500">
      <p class="text-stone-500 font-medium mb-2">Money saved this month</p>
      <p class="text-5xl font-bold text-emerald-600 tracking-tight mb-3">
        <%= number_to_currency(@change_orders_this_month, precision: 0) %>
      </p>
      <p class="text-stone-500">
        Change orders you documented instead of eating the cost.
      </p>
    </div>
  <% end %>

  <%# Needs Attention - Urgent but friendly %>
  <% if @quotes_needing_attention.any? || @pending_change_orders.any? %>
    <section class="mb-10">
      <h2 class="text-2xl mb-4 flex items-center gap-3">
        <span class="w-3 h-3 bg-amber-400 rounded-full"></span>
        Needs your attention
      </h2>
      
      <div class="card divide-y divide-stone-100 overflow-hidden">
        <% @quotes_needing_attention.each do |quote| %>
          <%= link_to quote, class: "block p-5 hover:bg-stone-50 transition-colors group" do %>
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0">
                <p class="text-lg font-bold text-stone-900 group-hover:text-emerald-800 transition-colors truncate">
                  <%= quote.client&.name || "No client" %>
                </p>
                <p class="text-stone-500 text-sm">
                  <%= quote.template_type.to_s.titleize %> · <%= quote.total_range %>
                </p>
              </div>
              <div class="shrink-0">
                <% if quote.viewed? %>
                  <span class="text-xs font-bold uppercase tracking-wide px-3 py-1 rounded-full bg-blue-100 text-blue-700">
                    Viewed
                  </span>
                <% else %>
                  <span class="text-sm text-stone-400">
                    Sent <%= time_ago_in_words(quote.sent_at) %> ago
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>

        <% @pending_change_orders.each do |co| %>
          <%= link_to job_change_order_path(co.job, co), class: "block p-5 hover:bg-stone-50 transition-colors group" do %>
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0">
                <p class="text-lg font-bold text-stone-900 group-hover:text-emerald-800 transition-colors">
                  Change Order #<%= co.co_number %>
                </p>
                <p class="text-stone-500 text-sm truncate">
                  <%= co.job.client&.name %> · <%= truncate(co.description, length: 50) %>
                </p>
              </div>
              <span class="text-lg font-bold text-emerald-600 shrink-0">
                <%= co.formatted_amount %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <%# Quick Actions %>
  <section class="mb-10">
    <div class="flex flex-wrap gap-3">
      <%= link_to new_quote_path, class: "btn-primary flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        New Quote
      <% end %>
      <%= link_to jobs_path, class: "btn-secondary" do %>
        View Jobs
      <% end %>
      <%= link_to clients_path, class: "btn-secondary" do %>
        View Clients
      <% end %>
    </div>
  </section>

  <%# Active Jobs %>
  <% if @active_jobs.any? %>
    <section class="mb-10">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl">Active jobs</h2>
        <%= link_to "See all →", jobs_path, class: "text-emerald-700 font-bold text-sm hover:underline" %>
      </div>

      <div class="card divide-y divide-stone-100 overflow-hidden">
        <% @active_jobs.each do |job| %>
          <%= link_to job, class: "block p-5 hover:bg-stone-50 transition-colors group" do %>
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0 flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <p class="text-lg font-bold text-stone-900 group-hover:text-emerald-800 transition-colors truncate">
                    <%= job.client&.name || "No client" %>
                  </p>
                  <% if job.on_hold? %>
                    <span class="text-xs font-bold uppercase tracking-wide px-2 py-0.5 rounded-full bg-amber-100 text-amber-700">On Hold</span>
                  <% end %>
                </div>
                <p class="text-stone-500 text-sm truncate">
                  <%= job.project_full_address.presence || job.quote.template_type.to_s.titleize + " remodel" %>
                </p>
              </div>
              <div class="text-right shrink-0">
                <p class="text-lg font-bold text-stone-900"><%= job.current_total_range %></p>
                <% if job.start_date %>
                  <p class="text-xs text-stone-400"><%= job.days_active %> days active</p>
                <% else %>
                  <p class="text-xs text-stone-400">Not started</p>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <%# Recent Quotes %>
  <section class="mb-10">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl">Recent quotes</h2>
      <%= link_to "See all →", quotes_path, class: "text-emerald-700 font-bold text-sm hover:underline" %>
    </div>

    <% if @recent_quotes.any? %>
      <div class="card divide-y divide-stone-100 overflow-hidden">
        <% @recent_quotes.each do |quote| %>
          <%= link_to quote, class: "block p-5 hover:bg-stone-50 transition-colors group" do %>
            <div class="flex items-start justify-between gap-4">
              <div class="min-w-0 flex-1">
                <p class="text-lg font-bold text-stone-900 group-hover:text-emerald-800 transition-colors truncate">
                  <%= quote.client&.name || "No client" %>
                </p>
                <p class="text-stone-500 text-sm truncate">
                  <%= quote.project_full_address.presence || quote.template_type.to_s.titleize + " remodel" %>
                </p>
              </div>
              <div class="text-right shrink-0">
                <p class="text-lg font-bold text-stone-900"><%= quote.total_range %></p>
                <p class="text-xs text-stone-400"><%= quote.created_at.strftime("%b %d") %></p>
              </div>
            </div>
            <% if quote.has_job? %>
              <div class="mt-3 pt-3 border-t border-stone-100">
                <p class="text-sm text-emerald-600 font-medium">
                  ✓ Converted to job
                </p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="card p-12 text-center">
        <div class="w-16 h-16 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
        </div>
        <h3 class="text-xl font-bold text-stone-900 mb-2">No quotes yet</h3>
        <p class="text-stone-500 mb-6">
          Create your first quote to get started.
        </p>
        <%= link_to new_quote_path, class: "btn-primary" do %>
          Create your first quote
        <% end %>
      </div>
    <% end %>
  </section>

  <%# Quick Stats - Simple, at the bottom %>
  <section class="pt-8 border-t border-stone-200">
    <div class="flex flex-wrap gap-8 sm:gap-12">
      <div>
        <p class="text-4xl font-bold text-stone-900"><%= @stats[:total_quotes] %></p>
        <p class="text-stone-500">Total quotes</p>
      </div>
      <div>
        <p class="text-4xl font-bold text-stone-900"><%= @stats[:quotes_this_month] %></p>
        <p class="text-stone-500">This month</p>
      </div>
      <div>
        <p class="text-4xl font-bold text-emerald-600"><%= @stats[:active_jobs] %></p>
        <p class="text-stone-500">Active jobs</p>
      </div>
    </div>
  </section>
</div>

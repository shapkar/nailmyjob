<% content_for :title, "#{@job.client&.name || 'Job'} - NailMyJob" %>

<div class="max-w-4xl mx-auto pb-20">
  <%# Header %>
  <div class="mb-8">
    <%= link_to jobs_path, class: "inline-flex items-center gap-2 text-stone-500 hover:text-stone-900 mb-6 transition-colors font-medium text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      Back to jobs
    <% end %>
    
    <div class="flex flex-wrap items-center gap-2 mb-3">
      <% if @job.active? %>
        <span class="text-xs font-bold uppercase tracking-wide px-3 py-1 rounded-full bg-emerald-100 text-emerald-700">Active</span>
      <% elsif @job.on_hold? %>
        <span class="text-xs font-bold uppercase tracking-wide px-3 py-1 rounded-full bg-amber-100 text-amber-700">On Hold</span>
      <% elsif @job.completed? %>
        <span class="text-xs font-bold uppercase tracking-wide px-3 py-1 rounded-full bg-blue-100 text-blue-700">Completed</span>
      <% elsif @job.cancelled? %>
        <span class="text-xs font-bold uppercase tracking-wide px-3 py-1 rounded-full bg-stone-100 text-stone-500">Cancelled</span>
      <% end %>
      <span class="font-bold text-stone-600 text-sm"><%= @job.job_number %></span>
    </div>
    
    <h1 class="text-3xl sm:text-4xl mb-2">
      <%= @job.client&.name || "No client" %>
    </h1>
    
    <p class="text-stone-500">
      <%= @job.quote.template_type.to_s.titleize %> Remodel Â· From Quote <%= @job.quote.quote_number %>
    </p>
  </div>

  <%# Action Bar %>
  <div class="bg-white p-4 rounded-2xl shadow-sm border border-black/5 flex flex-wrap items-center gap-3 mb-8 sticky top-4 z-20">
    <% if @job.active? || @job.on_hold? %>
      <%= link_to new_job_change_order_path(@job), class: "btn-primary !py-2.5 !px-5" do %>
        + Change Order
      <% end %>
    <% end %>
    
    <%= link_to edit_job_path(@job), class: "btn-secondary !py-2.5 !px-5" do %>
      Edit Job
    <% end %>
    
    <div class="ml-auto flex items-center gap-2">
      <% if @job.active? %>
        <%= button_to hold_job_path(@job), method: :post, class: "btn-secondary !py-2.5 !px-4 text-sm" do %>
          Pause
        <% end %>
        <%= button_to complete_job_path(@job), method: :post, data: { turbo_confirm: "Mark this job as completed?" }, class: "btn-secondary !py-2.5 !px-4 text-sm" do %>
          Complete
        <% end %>
      <% elsif @job.on_hold? %>
        <%= button_to resume_job_path(@job), method: :post, class: "btn-secondary !py-2.5 !px-4 text-sm" do %>
          Resume
        <% end %>
      <% elsif !@job.start_date %>
        <%= button_to start_job_path(@job), method: :post, class: "btn-primary !py-2.5 !px-4 text-sm" do %>
          Start Job
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <%# Contracted Scope (from Quote) %>
      <section class="card overflow-hidden">
        <div class="px-6 py-4 border-b border-stone-100 flex items-center justify-between bg-stone-50/50">
          <h2 class="text-xl m-0">Contracted Scope</h2>
          <%= link_to "View Original Quote", quote_path(@job.quote), class: "text-emerald-700 font-bold text-sm hover:underline" %>
        </div>
        
        <% if @job.quote.line_items.any? %>
          <div class="divide-y divide-stone-100">
            <% @job.quote.line_items.each do |item| %>
              <div class="p-6 hover:bg-stone-50 transition-colors">
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <h3 class="text-lg font-bold text-stone-900 mb-1"><%= item.description %></h3>
                    <div class="flex items-center gap-3">
                      <span class="text-xs font-bold uppercase tracking-wide text-stone-400"><%= item.category.to_s.titleize %></span>
                      <% if item.is_allowance %>
                        <span class="text-xs font-bold uppercase tracking-wide text-amber-600 bg-amber-50 px-2 py-0.5 rounded">Allowance</span>
                      <% end %>
                    </div>
                  </div>
                  <p class="text-lg font-mono font-medium text-stone-900 shrink-0"><%= item.range_display %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-12 text-center">
            <p class="text-stone-500">No line items in the original quote.</p>
          </div>
        <% end %>
      </section>

      <%# Change Orders %>
      <section>
        <div class="flex items-center justify-between mb-4 px-2">
          <h2 class="text-2xl m-0">Change Orders</h2>
          <% if @job.active? || @job.on_hold? %>
            <%= link_to new_job_change_order_path(@job), class: "text-emerald-700 font-bold text-sm hover:underline" do %>
              + Add New
            <% end %>
          <% end %>
        </div>
        
        <% if @change_orders.any? %>
          <div class="space-y-4">
            <% @change_orders.each do |co| %>
              <%= link_to job_change_order_path(@job, co), class: "card block p-6 hover:shadow-md transition-all group" do %>
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <div class="flex items-center gap-3 mb-2">
                      <span class="text-stone-400 font-mono text-sm">#<%= co.co_number %></span>
                      <% if co.signed? %>
                        <span class="text-xs font-bold uppercase tracking-wide text-emerald-700 bg-emerald-50 px-2 py-0.5 rounded">Signed</span>
                      <% elsif co.sent? || co.viewed? %>
                        <span class="text-xs font-bold uppercase tracking-wide text-amber-700 bg-amber-50 px-2 py-0.5 rounded">Pending</span>
                      <% else %>
                        <span class="text-xs font-bold uppercase tracking-wide text-stone-500 bg-stone-100 px-2 py-0.5 rounded">Draft</span>
                      <% end %>
                    </div>
                    <p class="text-lg font-medium text-stone-900 group-hover:text-emerald-800 transition-colors"><%= truncate(co.description, length: 80) %></p>
                  </div>
                  <p class="text-lg font-mono font-medium text-stone-900 shrink-0">
                    <%= co.formatted_amount %>
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="card p-8 text-center bg-stone-50 border-dashed border-stone-200">
            <p class="text-stone-500 text-sm">No change orders yet.</p>
          </div>
        <% end %>
      </section>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Current Total Card %>
      <div class="card p-6 border-2 border-stone-200">
        <p class="text-stone-500 text-xs font-bold uppercase tracking-wide mb-3">Current Job Total</p>
        <p class="text-3xl font-bold text-stone-900 tracking-tight">
          <%= @job.current_total_range %>
        </p>
        
        <% if @job.change_orders_total.to_i > 0 %>
          <div class="mt-5 pt-5 border-t border-stone-100 space-y-3">
            <div class="flex justify-between items-center text-sm">
              <span class="text-stone-400">Original contract</span>
              <span class="text-stone-500 font-mono"><%= @job.contracted_range %></span>
            </div>
            <div class="flex justify-between items-center text-sm">
              <span class="text-emerald-600 font-medium">Change orders</span>
              <span class="text-emerald-600 font-mono font-medium">+<%= number_to_currency(@job.change_orders_total, precision: 0) %></span>
            </div>
          </div>
        <% end %>
      </div>

      <%# Timeline Card %>
      <div class="card p-6 space-y-4">
        <h3 class="text-xs font-bold uppercase tracking-wide text-stone-400">Timeline</h3>
        
        <div>
          <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Status</p>
          <p class="font-medium text-stone-900"><%= @job.progress_status %></p>
        </div>
        
        <% if @job.start_date %>
          <div>
            <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Started</p>
            <p class="font-medium text-stone-900"><%= @job.start_date.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
        
        <% if @job.estimated_completion_date %>
          <div>
            <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Est. Completion</p>
            <p class="font-medium text-stone-900"><%= @job.estimated_completion_date.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
        
        <% if @job.actual_completion_date %>
          <div>
            <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Completed</p>
            <p class="font-medium text-emerald-700"><%= @job.actual_completion_date.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
        
        <% if @job.start_date && !@job.completed? %>
          <div class="pt-3 border-t border-stone-100">
            <p class="text-stone-500 text-sm"><%= @job.days_active %> days active</p>
          </div>
        <% end %>
      </div>

      <%# Client Portal Link %>
      <div class="card p-5 border-l-4 border-emerald-500">
        <p class="font-bold text-stone-900 mb-2">Client Portal</p>
        <p class="text-sm text-stone-500 mb-4 leading-relaxed">Share this link with your client to let them view the job and sign change orders.</p>
        
        <div class="flex gap-2">
          <input type="text" readonly value="<%= portal_job_url(@job.client_view_token) %>" class="!text-sm !py-2 !bg-stone-50 text-stone-500">
          <button type="button" 
                  class="btn-secondary !px-3 !py-2 whitespace-nowrap"
                  data-controller="clipboard"
                  data-clipboard-text="<%= portal_job_url(@job.client_view_token) %>"
                  data-action="click->clipboard#copy">
            Copy
          </button>
        </div>
      </div>

      <%# Project Details %>
      <div class="card p-6 space-y-6">
        <% if @job.project_full_address.present? %>
          <div>
            <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Project Address</p>
            <p class="font-medium text-stone-900"><%= @job.project_full_address %></p>
          </div>
        <% end %>
        <% if @job.notes.present? %>
          <div>
            <p class="text-xs font-bold uppercase tracking-wide text-stone-400 mb-1">Notes</p>
            <p class="text-sm text-stone-600 whitespace-pre-wrap"><%= @job.notes %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

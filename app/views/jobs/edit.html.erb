<% content_for :title, "Edit Job - NailMyJob" %>

<div class="max-w-2xl mx-auto pb-20">
  <header class="mb-8">
    <%= link_to job_path(@job), class: "inline-flex items-center gap-2 text-stone-500 hover:text-stone-900 mb-6 transition-colors font-medium text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      Back to job
    <% end %>
    
    <h1 class="text-3xl sm:text-4xl mb-2">Edit Job</h1>
    <p class="text-stone-500"><%= @job.job_number %> Â· <%= @job.client&.name %></p>
  </header>

  <%= form_with model: @job do |f| %>
    <% if @job.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
        <p class="font-bold text-red-800 mb-2">Please fix these errors:</p>
        <ul class="list-disc list-inside text-red-700 text-sm">
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Project Location</h2>
      </div>
      <div class="p-5">
        <div class="mb-4">
          <label class="block text-sm font-bold text-stone-700 mb-1">Street address</label>
          <%= f.text_field :project_address, placeholder: "123 Main St" %>
        </div>
        <div class="grid grid-cols-6 gap-3">
          <div class="col-span-3">
            <label class="block text-sm font-bold text-stone-700 mb-1">City</label>
            <%= f.text_field :project_city, placeholder: "Los Angeles" %>
          </div>
          <div class="col-span-1">
            <label class="block text-sm font-bold text-stone-700 mb-1">State</label>
            <%= f.text_field :project_state, maxlength: 2, class: "uppercase", placeholder: "CA" %>
          </div>
          <div class="col-span-2">
            <label class="block text-sm font-bold text-stone-700 mb-1">ZIP</label>
            <%= f.text_field :project_zip_code, placeholder: "90210" %>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Timeline</h2>
      </div>
      <div class="p-5">
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">Start date</label>
            <%= f.date_field :start_date %>
          </div>
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">Estimated completion</label>
            <%= f.date_field :estimated_completion_date %>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Notes</h2>
      </div>
      <div class="p-5">
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Internal notes</label>
          <%= f.text_area :notes, rows: 4, placeholder: "Notes about this job..." %>
        </div>
      </div>
    </div>

    <div class="flex gap-3">
      <%= link_to "Cancel", job_path(@job), class: "btn-secondary" %>
      <%= f.submit "Save changes", class: "btn-primary cursor-pointer" %>
    </div>
  <% end %>
</div>

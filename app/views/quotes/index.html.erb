<% content_for :title, "Quotes - NailMyJob" %>

<div class="max-w-3xl mx-auto">
  <header class="mb-6">
    <h1 class="text-3xl sm:text-4xl mb-1">Quotes</h1>
    <p class="text-stone-500">
      <% if @quotes.respond_to?(:total_count) %>
        <%= @quotes.total_count %> <%= "quote".pluralize(@quotes.total_count) %>
      <% else %>
        <%= @quotes.size %> <%= "quote".pluralize(@quotes.size) %>
      <% end %>
    </p>
  </header>

  <%# Status Tabs - Clear selection %>
  <nav class="flex items-center gap-1 mb-6 bg-white p-1.5 rounded-xl w-fit border border-stone-200 shadow-sm">
    <%= link_to "All", quotes_path, 
        class: "px-4 py-2 rounded-lg text-sm font-bold transition-all #{params[:status].blank? ? 'bg-[#2d8a6e] text-white shadow-sm' : 'text-stone-500 hover:bg-stone-100 hover:text-stone-900'}" %>
    <%= link_to "Drafts", quotes_path(status: :draft), 
        class: "px-4 py-2 rounded-lg text-sm font-bold transition-all #{params[:status] == 'draft' ? 'bg-[#2d8a6e] text-white shadow-sm' : 'text-stone-500 hover:bg-stone-100 hover:text-stone-900'}" %>
    <%= link_to "Sent", quotes_path(status: :sent), 
        class: "px-4 py-2 rounded-lg text-sm font-bold transition-all #{params[:status] == 'sent' ? 'bg-[#2d8a6e] text-white shadow-sm' : 'text-stone-500 hover:bg-stone-100 hover:text-stone-900'}" %>
    <%= link_to "Accepted", quotes_path(status: :accepted), 
        class: "px-4 py-2 rounded-lg text-sm font-bold transition-all #{params[:status] == 'accepted' ? 'bg-[#2d8a6e] text-white shadow-sm' : 'text-stone-500 hover:bg-stone-100 hover:text-stone-900'}" %>
  </nav>

  <% if @quotes.any? %>
    <div class="bg-white rounded-xl border border-stone-200 divide-y divide-stone-100 overflow-hidden">
      <% @quotes.each do |quote| %>
        <%= link_to quote, class: "block p-5 hover:bg-stone-50 transition-colors group" do %>
          <div class="flex items-start justify-between gap-4">
            <div class="min-w-0 flex-1">
              <div class="flex flex-wrap items-center gap-2 mb-1">
                <h3 class="text-lg font-bold text-stone-900 group-hover:text-emerald-800 transition-colors truncate">
                  <%= quote.client&.name || "No client" %>
                </h3>
                <% if quote.draft? %>
                  <span class="text-xs font-bold uppercase tracking-wide px-2 py-0.5 rounded-full bg-stone-100 text-stone-500">Draft</span>
                <% elsif quote.sent? %>
                  <span class="text-xs font-bold uppercase tracking-wide px-2 py-0.5 rounded-full bg-amber-100 text-amber-700">Sent</span>
                <% elsif quote.viewed? %>
                  <span class="text-xs font-bold uppercase tracking-wide px-2 py-0.5 rounded-full bg-blue-100 text-blue-700">Viewed</span>
                <% elsif quote.accepted? || quote.signed? %>
                  <span class="text-xs font-bold uppercase tracking-wide px-2 py-0.5 rounded-full bg-emerald-100 text-emerald-700">Accepted</span>
                <% end %>
              </div>
              <p class="text-sm text-stone-500">
                <%= quote.quote_number %> · <%= quote.template_type.to_s.titleize %>
                <% if quote.project_city.present? %>
                  · <%= quote.project_city %>
                <% end %>
              </p>
            </div>
            <div class="text-right shrink-0">
              <p class="text-lg font-bold text-stone-900"><%= quote.total_range %></p>
              <p class="text-xs text-stone-400"><%= quote.created_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
          
          <% if quote.job&.change_orders&.signed&.any? %>
            <div class="mt-3 pt-3 border-t border-stone-100 flex items-center justify-between">
              <span class="text-sm text-stone-500"><%= quote.job.change_orders.signed.count %> change <%= "order".pluralize(quote.job.change_orders.signed.count) %></span>
              <span class="text-sm font-bold text-emerald-600">
                +<%= number_to_currency(quote.job.change_orders_total, precision: 0) %>
              </span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% if defined?(@pagy) && @pagy.pages > 1 %>
      <div class="flex items-center justify-center gap-4 pt-6">
        <% if @pagy.prev %>
          <%= link_to quotes_path(page: @pagy.prev, status: params[:status]), class: "text-sm font-bold text-stone-500 hover:text-stone-900" do %>
            ← Previous
          <% end %>
        <% end %>
        
        <span class="text-sm text-stone-400">
          Page <%= @pagy.page %> of <%= @pagy.pages %>
        </span>
        
        <% if @pagy.next %>
          <%= link_to quotes_path(page: @pagy.next, status: params[:status]), class: "text-sm font-bold text-stone-500 hover:text-stone-900" do %>
            Next →
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl border border-stone-200 p-10 text-center">
      <div class="w-14 h-14 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-7 h-7 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
      </div>
      <h3 class="text-xl font-bold text-stone-900 mb-2">No quotes yet</h3>
      <p class="text-stone-500 mb-6">
        Create your first quote to start tracking projects.
      </p>
      <%= link_to new_quote_path, class: "btn-primary" do %>
        Create your first quote
      <% end %>
    </div>
  <% end %>
</div>

<% content_for :title, "Sign In - NailMyJob" %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <%# Logo %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-emerald-500 rounded-2xl mb-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-slate-900">Welcome to NailMyJob</h1>
      <p class="text-slate-500 mt-2">Sign in to manage your quotes</p>
    </div>

    <%# Form %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "you@company.com",
                class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= f.password_field :password, 
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "rounded border-slate-300 text-emerald-500 focus:ring-emerald-500" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-slate-600" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= f.submit "Sign In", class: "w-full px-4 py-3 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

    <%# Links %>
    <div class="mt-6 text-center space-y-3">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <p>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-emerald-600 hover:text-emerald-700" %>
        </p>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="text-slate-600">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
        </p>
      <% end %>
    </div>
  </div>
</div>

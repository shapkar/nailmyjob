<% content_for :title, "Sign In - NailMyJob" %>

<div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-sm">
    <%# Header %>
    <div class="text-center mb-10">
      <a href="/" class="inline-block mb-6">
        <span style="font-family: 'DM Sans', sans-serif; font-weight: 700; font-size: 1.6rem; color: #1a1a1a; letter-spacing: -0.02em;">nailmyjob</span>
      </a>
      <h1 class="text-3xl font-black text-stone-900 mb-2">Welcome back</h1>
      <p class="text-stone-500">Sign in to your account</p>
    </div>

    <%# Form %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="space-y-5">
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Email</label>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              placeholder: "you@company.com" %>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Password</label>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              placeholder: "Your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2">
            <%= f.check_box :remember_me, class: "rounded border-stone-300 text-emerald-600 focus:ring-emerald-500" %>
            <label class="text-sm text-stone-600">Keep me signed in</label>
          </div>
        <% end %>

        <div class="pt-2">
          <%= f.submit "Sign in", class: "btn-primary w-full cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <%# Links %>
    <div class="mt-8 text-center space-y-4">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <p>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-stone-500 hover:text-stone-700" %>
        </p>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="text-stone-600">
          New to nailmyjob?
          <%= link_to "Create an account", new_registration_path(resource_name), class: "text-emerald-700 hover:text-emerald-800 font-bold" %>
        </p>
      <% end %>
    </div>
  </div>
</div>

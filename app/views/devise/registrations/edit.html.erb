<% content_for :title, "Edit Profile - NailMyJob" %>

<div class="max-w-2xl mx-auto pb-20">
  <header class="mb-8">
    <h1 class="text-3xl sm:text-4xl mb-2">Edit Profile</h1>
    <p class="text-stone-500">Update your personal information and password.</p>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
        <p class="font-bold text-red-800 mb-2">Please fix these errors:</p>
        <ul class="list-disc list-inside text-red-700 text-sm">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Personal Information</h2>
      </div>
      <div class="p-5">
        <div class="grid grid-cols-2 gap-4 mb-5">
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">First name</label>
            <%= f.text_field :first_name, placeholder: "John", autofocus: true %>
          </div>
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">Last name</label>
            <%= f.text_field :last_name, placeholder: "Smith" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Email</label>
          <%= f.email_field :email, autocomplete: "email", placeholder: "you@example.com" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="text-xs text-amber-600 mt-1">Waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Change Password</h2>
        <p class="text-sm text-stone-500">Leave blank if you don't want to change it</p>
      </div>
      <div class="p-5">
        <div class="mb-5">
          <label class="block text-sm font-bold text-stone-700 mb-1">New password</label>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-stone-400 mt-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Confirm new password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-stone-200 mb-6">
      <div class="px-5 py-4 border-b border-stone-100">
        <h2 class="font-bold text-stone-900">Confirm Changes</h2>
      </div>
      <div class="p-5">
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Current password</label>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter your current password" %>
          <p class="text-xs text-stone-400 mt-1">We need your current password to save changes</p>
        </div>
      </div>
    </div>

    <div class="flex gap-3 mb-10">
      <%= link_to "Cancel", edit_company_path, class: "btn-secondary" %>
      <%= f.submit "Save changes", class: "btn-primary cursor-pointer" %>
    </div>
  <% end %>

  <div class="bg-white rounded-xl border border-stone-200">
    <div class="px-5 py-4 border-b border-stone-100">
      <h2 class="font-bold text-red-600">Danger Zone</h2>
    </div>
    <div class="p-5">
      <p class="text-stone-500 text-sm mb-4">
        Once you delete your account, there is no going back. All your data will be permanently removed.
      </p>
      <%= button_to "Delete my account", registration_path(resource_name), 
          method: :delete, 
          data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." },
          class: "text-red-600 hover:text-red-700 text-sm font-medium" %>
    </div>
  </div>
</div>

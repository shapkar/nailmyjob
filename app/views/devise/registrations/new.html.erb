<% content_for :title, "Start Your Free Trial - NailMyJob" %>

<div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-sm">
    <%# Header %>
    <div class="text-center mb-10">
      <a href="/" class="inline-block mb-6">
        <span style="font-family: 'DM Sans', sans-serif; font-weight: 700; font-size: 1.6rem; color: #1a1a1a; letter-spacing: -0.02em;">nailmyjob</span>
      </a>
      <h1 class="text-3xl font-black text-stone-900 mb-2">Start your free trial</h1>
      <p class="text-stone-500">No credit card required. 14 days free.</p>
    </div>

    <%# Form %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
          <p class="font-bold text-red-800 mb-1">Something went wrong</p>
          <ul class="text-red-700 text-sm list-disc list-inside">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-5">
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Company name</label>
          <%= f.text_field :company_name, 
              autofocus: true,
              autocomplete: "organization",
              placeholder: "Your business name" %>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Email</label>
          <%= f.email_field :email, 
              autocomplete: "email",
              placeholder: "you@company.com" %>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Password</label>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              placeholder: "At least 6 characters" %>
        </div>

        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Confirm password</label>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              placeholder: "Type it again" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Create my account", class: "btn-primary w-full cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <%# Links %>
    <div class="mt-8 text-center">
      <p class="text-stone-600">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "text-emerald-700 hover:text-emerald-800 font-bold" %>
      </p>
    </div>

    <%# Simple value props %>
    <div class="mt-10 pt-8 border-t border-stone-200">
      <p class="text-sm text-stone-500 text-center mb-4">What you get:</p>
      <ul class="text-sm text-stone-600 space-y-2">
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-600 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path></svg>
          Voice-powered quotes in minutes
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-600 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path></svg>
          Change orders signed on-site
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-600 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path></svg>
          Legal digital signatures
        </li>
      </ul>
    </div>
  </div>
</div>

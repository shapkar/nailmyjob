<% content_for :title, "Sign Up - NailMyJob" %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <%# Logo %>
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-emerald-500 rounded-2xl mb-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-slate-900">Create Your Account</h1>
      <p class="text-slate-500 mt-2">Start creating professional quotes in minutes</p>
    </div>

    <%# Form %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "you@company.com",
                class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= f.password_field :password, 
                autocomplete: "new-password",
                placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-slate-500"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
          </div>

          <div class="pt-2">
            <%= f.submit "Create Account", class: "w-full px-4 py-3 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

    <%# Links %>
    <div class="mt-6 text-center">
      <p class="text-slate-600">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
      </p>
    </div>

    <%# Benefits %>
    <div class="mt-8 grid grid-cols-3 gap-4 text-center">
      <div>
        <div class="text-2xl mb-1">âš¡</div>
        <p class="text-xs text-slate-600">5 min quotes</p>

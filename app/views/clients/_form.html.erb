<%# local_assigns: client %>
<%= form_with model: client do |f| %>
  <% if client.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
      <p class="font-bold text-red-800 mb-2">Please fix these errors:</p>
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Basic Info %>
  <div class="bg-white rounded-xl border border-stone-200 mb-6">
    <div class="px-5 py-4 border-b border-stone-100">
      <h2 class="font-bold text-stone-900">Client Information</h2>
    </div>
    <div class="p-5">
      <div class="mb-5">
        <label class="block text-sm font-bold text-stone-700 mb-1">Name</label>
        <%= f.text_field :name, required: true, placeholder: "Full name" %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Email</label>
          <%= f.email_field :email, placeholder: "email@example.com" %>
        </div>
        <div>
          <label class="block text-sm font-bold text-stone-700 mb-1">Phone</label>
          <%= f.telephone_field :phone, placeholder: "(555) 123-4567" %>
        </div>
      </div>
    </div>
  </div>

  <%# Address %>
  <div class="bg-white rounded-xl border border-stone-200 mb-6">
    <div class="px-5 py-4 border-b border-stone-100">
      <h2 class="font-bold text-stone-900">Address</h2>
    </div>
    <div class="p-5">
      <div class="mb-4">
        <label class="block text-sm font-bold text-stone-700 mb-1">Street address</label>
        <%= f.text_field :address, placeholder: "123 Main St" %>
      </div>

      <div class="grid grid-cols-6 gap-3">
        <div class="col-span-3">
          <label class="block text-sm font-bold text-stone-700 mb-1">City</label>
          <%= f.text_field :city %>
        </div>
        <div class="col-span-1">
          <label class="block text-sm font-bold text-stone-700 mb-1">State</label>
          <%= f.text_field :state, maxlength: 2, class: "uppercase", placeholder: "CA" %>
        </div>
        <div class="col-span-2">
          <label class="block text-sm font-bold text-stone-700 mb-1">ZIP</label>
          <%= f.text_field :zip_code %>
        </div>
      </div>
    </div>
  </div>

  <%# Notes %>
  <div class="bg-white rounded-xl border border-stone-200 mb-6">
    <div class="px-5 py-4 border-b border-stone-100">
      <h2 class="font-bold text-stone-900">Notes</h2>
    </div>
    <div class="p-5">
      <%= f.text_area :notes, rows: 4, placeholder: "Any notes about this client..." %>
    </div>
  </div>

  <%# Actions %>
  <div class="flex gap-3">
    <% if client.persisted? %>
      <%= link_to "Cancel", client_path(client), class: "btn-secondary" %>
    <% else %>
      <%= link_to "Cancel", clients_path, class: "btn-secondary" %>
    <% end %>
    <%= f.submit client.persisted? ? "Save changes" : "Create client", class: "btn-primary cursor-pointer" %>
  </div>
<% end %>

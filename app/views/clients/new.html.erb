<% content_for :title, "New Client - NailMyJob" %>

<div class="max-w-2xl mx-auto pb-20">
  <header class="mb-8">
    <%= link_to clients_path, class: "inline-flex items-center gap-2 text-stone-500 hover:text-stone-900 mb-4 transition-colors font-medium text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      Back to clients
    <% end %>
    <h1 class="text-3xl sm:text-4xl mb-2">New Client</h1>
    <p class="text-stone-500">Add a new client to your contact list.</p>
  </header>

  <%= render "form", client: @client %>
</div>
